(lang dune 2.7)

; Project information
(name ocir)
(version dev)
(authors "Guillaume Bury <guillaume.bury@gmail.com")
(maintainers "Guillaume Bury <guillaume Bury@gmail.com>")
(source (github Gbury/ocir))

; Generate the opam files
(generate_opam_files true)
(package
  (name ocir)
  (synopsis "The Ocaml Inlining Reports utilities")
  (description "\
Ocir is a suite of utilities built to manipulate the inlining reports generated by the OCaml compiler.
It comprises a library to read and manipulate iunlining reports in ocaml, and a binary that makes use
of the library to provide various features, such as comparing reports, etc...")
  (depends
    (ocaml (>= 4.04.0))
    (ocaml-compiler-libs (>= v0.12.3))
    (dune (>= 2.7))
    (yojson (>= 1.7.0))
    (ppx_yojson_conv (>= v0.14.0))
  )
)
